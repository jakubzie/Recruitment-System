<Window x:Class="GUI.ApplicantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="ApplicantsWindow" Height="450" Width="1200">
    <Grid>
        <Label x:Name="LblApplicants" FontSize="35" Content="List of applicants:" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="64" Width="284"/>
        <ListBox x:Name="LstApplicants" FontSize="20" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="24,139,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="235" Width="879"/>
        <Button x:Name="BtnAccept" FontSize="25" Content="Accept" Margin="960,164,0,0" Click="BtnAccept_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Height="53" Width="140"/>
        <Button x:Name="BtnAdd" FontSize="20" Content="Add an applicant" Margin="934,241,0,0" Click="BtnAdd_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Height="70" Width="192"/>
        <Button x:Name="BtnClose" FontSize="25" Content="Close" Margin="960,340,0,0" Click="BtnClose_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Height="48" Width="140"/>

    </Grid>
</Window>
